@{
    ViewData["Title"] = "Home Page";
}
@model Consultation
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Lab10
<div class="text-center">
    <h4>Заповніть форму</h4>
    <form method="post" style="width: 40%; margin:auto">
        <label asp-for="Name">Ім'я</label><br />
        <input type="text" name="name" asp-for="Name" /><br />
        <span asp-validation-for="Name" /><br />

        <label asp-for="Email">Пошта</label><br />
        <input type="email" name="email" asp-for="Email" /><br />
        <span asp-validation-for="Email" /><br />

        <label asp-for="Subject">Subject</label><br />
        <select name="subject" asp-for="Subject">
            <option value="JavaScript">JavaScript</option>
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
            <option value="Basics">Основи</option>
        </select><br />
        <span asp-validation-for="Subject" /><br />

        <label asp-for="Date">Дата консультації</label><br />
        <input type="date" name="date" asp-for="Date" /><br />
        <span asp-validation-for="Date" /><br />

        <button type="submit">Продовжити</button><br />
    </form>
    <vc:error-marker consultation="@Model"></vc:error-marker>
</div>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

